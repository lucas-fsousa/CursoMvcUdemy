@model ClienteModel
@{
    ViewData["Title"] = "Home Page";
  List<ClienteModel> clientes = ViewBag.ListaClientes;

}

<h3 class="text-center">Lista de clientes</h3>
<br />
<table class="table table-responsive-md">
  <thead>
    <tr class="text-center">
      <th>Id</th>
      <th>Nome</th>
      <th>Cpf</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach(var cliente in clientes) {
    <tr class="text-center">
      <td>@cliente.Id</td>
      <td>@cliente.Nome</td>
      <td>@cliente.Cpf</td>
      <td class="text-right">
        <a href="/Cliente/Editar/@cliente.Id" class="btn btn-info">Editar</a> - 
        <a href="/Cliente/ConfirmarDel/@cliente.Id" class="btn btn-danger">Delete</a>
      </td>
    </tr>
     }

    </tbody>
  </table>
<br />
<a asp-controller="Cliente" asp-action="Cadastrar" class="btn btn-block btn-primary">Cadastrar Novo Cliente</a>
