@model ClienteModel
@{
  ViewData["Title"] = "Editar cliente";
  ClienteModel cliente = ViewBag.Cliente;

}

<h3 class="text-center">Editar Cliente</h3>
<br />
<form asp-controller="Cliente" asp-action="Editar" method="post">
  <div class="row">
    <div class="form-group col-md-6">
      <label asp-for="Nome" for="nome">Nome: </label>
      <input asp-for="Nome" id="nome" class="form-control" value="@cliente.Nome"/>
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="Cpf" for="cpf">Cpf: </label>
      <input asp-for="Cpf" id="cpf" class="form-control" value="@cliente.Cpf"/>
      <span asp-validation-for="Cpf" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input type="submit" value="Concluir Edição" class="btn btn-success" />
    </div>
  </div>
</form>


@section Scripts{
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
