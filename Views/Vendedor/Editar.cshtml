@model VendedorModel
@{
  ViewData["Title"] = "Home Page";
  VendedorModel vendedor = ViewBag.Vendedor;

}

<h3 class="text-center">Editar vendedor</h3>
<br />
<form asp-controller="Vendedor" asp-action="Editar" method="post">
  <div class="row">
    <div class="form-group col-md-6">
      <label asp-for="Nome" for="nome">Nome: </label>
      <input asp-for="Nome" id="nome" class="form-control" value="@vendedor.Nome"/>
      <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group col-md-6">
      <label asp-for="NomeEpsRepresentante" for="epsvendedor">Nome da empresa do vendedor: </label>
      <input asp-for="NomeEpsRepresentante" id="epsvendedor" class="form-control" value="@vendedor.NomeEpsRepresentante"/>
      <span asp-validation-for="NomeEpsRepresentante" class="text-danger"></span>
    </div>
    <div class="form-group">
      <input type="submit" value="Concluir Edição" class="btn btn-success" />
    </div>
  </div>
</form>


@section Scripts{
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
